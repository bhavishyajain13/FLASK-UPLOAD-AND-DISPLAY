roi = gray[y - r:y + r, x - r:x + r]

                # Calculate the percentage of white pixels within the ROI
                total_pixels = roi.shape[0] * roi.shape[1]
                white_pixels = np.sum(roi == 255)
                percentage_white = (white_pixels / total_pixels) * 100
                print("Percentage of white pixels in the detected circle:", percentage_white, "%")

        # Display the detected circle
