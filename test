<script>
        let jsonData = {}; // Variable to store fetched JSON data

        // Function to fetch data from the API
        function fetchData() {
            fetch('your_api_url_here')
                .then(response => response.json())
                .then(data => {
                    jsonData = data; // Store fetched data in a variable
                    toggleDiv('all'); // Initially show all data
                })
                .catch(error => {
                    console.error('Error fetching data:', error);
                });
        }

        // Function to toggle display based on button clicked
        function toggleDiv(type) {
            const filteredData = filterData(type);
            displayData(filteredData);
        }

        // Function to filter data based on button clicked
        function filterData(type) {
            if (type === 'valid') {
                return Object.entries(jsonData).filter(([key, value]) => value.case === 'valid');
            } else if (type === 'invalid') {
                return Object.entries(jsonData).filter(([key, value]) => value.case === 'invalid');
            } else {
                return Object.entries(jsonData);
            }
        }

        // Function to display filtered data
        function displayData(filteredData) {
            const tableBody = document.getElementById("tableBody");
            tableBody.innerHTML = ""; // Clear existing rows

            filteredData.forEach(([key, value]) => {
                const row = document.createElement("tr");
                const fieldNameCell = document.createElement("td");
                fieldNameCell.textContent = key;
                const caseCell = document.createElement("td");
                caseCell.textContent = value.case;
                const reasonCell = document.createElement("td");
                reasonCell.textContent = value.reason || "-"; // If reason is not available, display "-"

                row.appendChild(fieldNameCell);
                row.appendChild(caseCell);
                row.appendChild(reasonCell);
                tableBody.appendChild(row);
            });
        }

        // Call fetchData function to fetch data when the page loads
        fetchData();
    </script>
